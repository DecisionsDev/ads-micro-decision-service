<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>promotion</artifactId>
    <groupId>ads.projects.promotion</groupId>
    <version>1.0.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>promotionDecisionService</artifactId>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>${project.basedir}</directory>
        <includes>
          <include>META-INF/decisionServiceArchive.json</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>${maven-dependency-plugin.version}</version>
        <executions>
          <execution>
            <id>unpack</id>
            <phase>compile</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>ads.projects.promotion</groupId>
                  <artifactId>promotionDecisionModel</artifactId>
                  <version>LATEST-SNAPSHOT</version>
                  <type>jar</type>
                  <overWrite>false</overWrite>
                  <includes>**/*.class</includes>
                  <outputDirectory>${project.build.directory}/classes</outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>ads.projects.promotion</groupId>
                  <artifactId>promotionModel</artifactId>
                  <version>LATEST-SNAPSHOT</version>
                  <type>jar</type>
                  <overWrite>false</overWrite>
                  <includes>**/*.class</includes>
                  <outputDirectory>${project.build.directory}/classes</outputDirectory>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${maven-shade-plugin.version}</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <minimizeJar>true</minimizeJar>
              <promoteTransitiveDependencies>true</promoteTransitiveDependencies>
              <transformers>
                <transformer />
                <transformer>
                  <resource>META-INF/decision-providers</resource>
                </transformer>
              </transformers>
              <artifactSet>
                <excludes>
                  <exclude>com.ibm.decision:engine-de-api</exclude>
                </excludes>
              </artifactSet>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>manifest.json</exclude>
                    <exclude>bom-entries/*</exclude>
                    <exclude>*.bom</exclude>
                    <exclude>*.jmod</exclude>
                    <exclude>ilog/rules/engine/dataio/**</exclude>
                    <exclude>com/ibm/ia/generatedXOM/**</exclude>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                    <exclude>com/fasterxml/**</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>include-libs</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <version>3.0.0</version>
            <executions>
              <execution>
                <id>unpack-libs</id>
                <phase>compile</phase>
                <goals>
                  <goal>run</goal>
                </goals>
                <configuration>
                  <target>
                    <unzip>
                      <fileset>
                        <filename />
                      </fileset>
                    </unzip>
                  </target>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <dependencies>
    <dependency>
      <groupId>com.ibm.decision</groupId>
      <artifactId>engine-de-api</artifactId>
      <version>2.14.0</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
</project>
